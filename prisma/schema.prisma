generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum PartyScope {
  NATIONAL
  ASSOCIATION
  BRANCH
  CHAPTER
}

model User {
  id           String    @id @default(uuid())
  dni          String    @unique @db.VarChar(8)
  passwordHash String
  firstName    String    @db.VarChar(100)
  lastName     String    @db.VarChar(100)
  phone        String    @unique @db.VarChar(20)
  email        String    @unique @db.VarChar(254)
  chapterId    String
  isActive     Boolean   @default(true)
  statusReason String?   @db.VarChar(255)
  deletedAt    DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  chapter             Chapter              @relation(fields: [chapterId], references: [id], onDelete: Restrict)
  roles               UserRole[]
  sessions            Session[]
  auditLogs           AuditLog[]
  passwordResetTokens PasswordResetToken[]

  @@index([dni])
  @@index([chapterId])
}

model Role {
  id          String    @id @default(uuid())
  name        String    @unique @db.VarChar(50)
  description String?
  deletedAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  users       UserRole[]
  permissions RolePermission[]

  @@index([name])
}

model UserRole {
  userId    String
  roleId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
  @@index([roleId])
}

model Permission {
  id          String    @id @default(uuid())
  key         String    @unique @db.VarChar(100)
  description String?
  deletedAt   DateTime?
  createdAt   DateTime  @default(now())

  roles RolePermission[]

  @@index([key])
}

model RolePermission {
  roleId       String
  permissionId String
  createdAt    DateTime @default(now())

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId])
  @@index([permissionId])
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  tokenHash String   @unique @db.VarChar(64)
  expiresAt DateTime
  createdAt DateTime @default(now())

  ipHash     String?  @db.VarChar(64)
  userAgent  String?  @db.VarChar(500)
  lastUsedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([tokenHash])
  @@index([expiresAt])
}

model PasswordResetToken {
  id        String    @id @default(uuid())
  userId    String
  tokenHash String    @unique @db.VarChar(64)
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model Association {
  id        String    @id @default(uuid())
  name      String    @unique @db.VarChar(200)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  branches    Branch[]
  parties     PoliticalParty[]
  specialties Specialty[]
  elections   Election[]

  @@index([name])
}

model Branch {
  id            String    @id @default(uuid())
  associationId String
  name          String    @db.VarChar(200)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime?

  association        Association        @relation(fields: [associationId], references: [id], onDelete: Restrict)
  chapters           Chapter[]
  parties            PoliticalParty[]
  chapterSpecialties ChapterSpecialty[]
  elections          Election[]

  @@unique([associationId, name])
  @@index([associationId])
  @@index([name])
}

model Specialty {
  id            String    @id @default(uuid())
  name          String    @db.VarChar(200)
  associationId String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime?

  association Association        @relation(fields: [associationId], references: [id], onDelete: Restrict)
  chapters    ChapterSpecialty[]

  @@unique([associationId, name])
  @@index([name])
  @@index([associationId])
}

model Chapter {
  id        String    @id @default(uuid())
  branchId  String
  name      String    @db.VarChar(200)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  branch      Branch             @relation(fields: [branchId], references: [id], onDelete: Restrict)
  specialties ChapterSpecialty[]
  users       User[]
  parties     PoliticalParty[]
  elections   Election[]

  @@unique([branchId, name])
  @@index([branchId])
  @@index([name])
}

model ChapterSpecialty {
  chapterId   String
  specialtyId String
  branchId    String
  createdAt   DateTime @default(now())

  chapter   Chapter   @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  specialty Specialty @relation(fields: [specialtyId], references: [id], onDelete: Restrict)
  branch    Branch    @relation(fields: [branchId], references: [id], onDelete: Restrict)

  @@id([chapterId, specialtyId])
  @@unique([branchId, specialtyId])
  @@index([branchId])
  @@index([specialtyId])
}

model PoliticalParty {
  id            String     @id @default(uuid())
  name          String     @unique @db.VarChar(200)
  acronym       String?    @db.VarChar(50)
  scope         PartyScope @default(NATIONAL)
  associationId String?
  branchId      String?
  chapterId     String?
  isActive      Boolean    @default(true)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  deletedAt     DateTime?

  association    Association?    @relation(fields: [associationId], references: [id], onDelete: SetNull)
  branch         Branch?         @relation(fields: [branchId], references: [id], onDelete: SetNull)
  chapter        Chapter?        @relation(fields: [chapterId], references: [id], onDelete: SetNull)
  candidateLists CandidateList[]

  @@index([name])
  @@index([isActive])
  @@index([scope])
  @@index([associationId])
  @@index([branchId])
  @@index([chapterId])
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  action    String   @db.VarChar(100)
  entity    String   @db.VarChar(50)
  entityId  String
  metadata  Json?
  ipHash    String?  @db.VarChar(64)
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([entity, entityId])
  @@index([action])
  @@index([createdAt])
}

model Election {
  id          String     @id @default(uuid())
  name        String     @db.VarChar(200)
  description String?    @db.Text
  startDate   DateTime
  endDate     DateTime
  status      String     @default("DRAFT") // DRAFT, OPEN, CLOSED, COMPLETED
  scope       PartyScope @default(NATIONAL)

  associationId String
  association   Association @relation(fields: [associationId], references: [id])

  // Optional linkage depending on scope
  branchId  String?
  branch    Branch?  @relation(fields: [branchId], references: [id])
  chapterId String?
  chapter   Chapter? @relation(fields: [chapterId], references: [id])

  candidateLists CandidateList[]
  positions      ElectionPosition[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([associationId])
  @@index([status])
}

model ElectionPosition {
  id         String   @id @default(uuid())
  title      String   @db.VarChar(100)
  order      Int      @default(0)
  electionId String
  election   Election @relation(fields: [electionId], references: [id], onDelete: Cascade)

  candidates Candidate[]

  @@index([electionId])
}

model CandidateList {
  id               String  @id @default(uuid())
  name             String  @db.VarChar(100)
  number           Int?
  electionId       String
  politicalPartyId String?

  election       Election        @relation(fields: [electionId], references: [id], onDelete: Cascade)
  politicalParty PoliticalParty? @relation(fields: [politicalPartyId], references: [id])

  candidates Candidate[]

  @@index([electionId])
}

model Candidate {
  id        String  @id @default(uuid())
  firstName String  @db.VarChar(100)
  lastName  String  @db.VarChar(100)
  dni       String? @db.VarChar(20)
  photoUrl  String?
  voteCount Int     @default(0)

  candidateListId String
  candidateList   CandidateList @relation(fields: [candidateListId], references: [id], onDelete: Cascade)

  positionId String
  position   ElectionPosition @relation(fields: [positionId], references: [id], onDelete: Restrict)

  @@index([candidateListId])
  @@index([positionId])
}
